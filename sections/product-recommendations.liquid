{% if section.settings.show_product_recommendations %}
  {% if recommendations.performed %}
    {% if recommendations.products_count > 0 %}

    <!---##### Desktop #####--->
      <div class="container-lg center-block desktop-only" style="margin-top: 78px;">
        <div class="large-margin" style="margin-bottom: 140px;">
          <div style="margin-bottom: 45px;">
            <h3 class="dark-blue">{{ section.settings.heading | escape }}</h3>
          </div>
        <ul class="d-flex space-between recomm-container">
          {% for product in recommendations.products %}
            <li class="recomm-item">
              {% include 'product-grid' %}
              <a href="{{ product.url }}">
                <button class="pbutton linear-orange uppercase" style="width: 264px; margin-top: 15px;">learn more</button></a>
            </li>
          {% endfor %}
        </ul>
      </div>
      </div>

      <!---##### Mobile #####--->

      <div class="container-lg center-block mobile-only" style="margin-bottom: 70%;">
        <div style="margin-bottom: 140px; margin-left: 32px; margin-right: 32px;">
          <div style="margin-bottom: 45px;">
            <h3 class="dark-blue">{{ section.settings.heading | escape }}</h3>
          </div>
        <ul id="rec-product" class="d-flex space-between">
          {% for product in recommendations.products %}
            <li>
              {% include 'product-grid' %}
              <a href="{{ product.url }}">
                <button class="pbutton linear-orange uppercase" style="width: 80%; margin-top: 15px;">learn more</button></a>
            </li>
          {% endfor %}
        </ul>
      </div>
      </div>

    {% endif %}
  {% else  %}
    <div class="page-width" data-product-id="{{ product.id }}" data-section-id="{{ section.id }}" data-section-type="product-recommendations"></div>
  {% endif %}
{% endif %}

<script>
$(document).ready(function(){
  $('#rec-product').slick({
    centerMode: true,
    dots: true,
    arrows: false,
    focusOnSelect:true,
    slidesToShow: 1,
    slidesToScroll: 4,
  });

});
</script>

