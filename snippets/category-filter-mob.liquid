<button id="filtermobbutton" class="mobilefilterby">Filter By</button>


<div id="fitermob" class="filterbox">
  <div class="filterbox-content">
    <span class="shutmodal">&times;</span>
   
  
<h3>Filter By</h3>
<a href="/collections/{{ collection.handle }}/" class="clearall">Clear All Filters</a>
  

<form id="filterbyformMob" action="/collections/{{ collection.handle }}">
