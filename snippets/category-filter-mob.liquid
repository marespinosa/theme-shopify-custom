<script type="text/javascript">
    $('#filterbyformMob').click(function(event) {
      event.preventDefault();
      var filterUrlmob = '';
      var datamob = $(this).serializeArray();
      for (var x = 0; x < datamob.length; x++) {
        filterUrlmob += datamob[x].value;
        if (x !== (datamob.length - 1)) {
          filterUrlmob += '+';
        }
      }
      document.location.href = '/collections/{{ collection.handle }}/' + filterUrlmob;
    });

    $('#pricetage input').click(function(){
       if(!$(this).hasClass("active")){
                 $(".active").removeClass("active");
                 $(this).addClass("active");
        }else{
            return false;
       }
 });


</script>


    
    
    
