      {% if current_tags contains ostag %}
        <label class="labelfilter" id="labelsm{{ ostag | handle }}">
          <input type="checkbox" id="inputsm{{ ostag | handle }}" class="coll-filter" name="{{ ostag | handle }}" value="{{ ostag | handle }}" checked />
          {{ ostag }}
        </label>
      {% else %}
      <label class="labelfilter" id="labelsm{{ ostag | handle }}">
        <input type="checkbox" id="inputsm{{ ostag | handle }}" class="coll-filter" name="{{ ostag | handle }}" value="{{ ostag | handle }}" />
