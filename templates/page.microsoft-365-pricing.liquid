<script type="text/javascript">

    let page365PricingkeyTimerRefresh;

    var offerTimerDeadline = 'March 01 2022';

    clearInterval(page365PricingkeyTimerRefresh);

    page365PricingkeyTimerRefresh = setInterval(() => {

        let missingTime     = Date.parse(offerTimerDeadline) - Date.parse(new Date());
        let missingSeconds  = Math.floor( (missingTime / 1000) % 60);
        let missingMinutes  = Math.floor( (missingTime / 1000 / 60) % 60);
        let missingHours    = Math.floor( missingTime / (1000 * 60 * 60 ) % 24);
        let missingDays     = Math.floor( missingTime / (1000* 60 * 60 * 24));

        missingHours    = missingHours < 10 ? `0${missingHours}` : missingHours;
        missingMinutes  = missingMinutes < 10 ? `0${missingMinutes}` : missingMinutes;
        missingSeconds  = missingSeconds < 10 ? `0${missingSeconds}` : missingSeconds;

        let offerTimeLeft = `${missingDays}d ${missingHours}:${missingMinutes}:${missingSeconds}`;

        console.log(offerTimeLeft);

        let elements = document.querySelectorAll('.offer-timer--time-left');

        console.log(elements.length);

        for (let i = 0; i < elements.length; i++) {
            let element = elements[i];
            element.innerHTML = offerTimeLeft;
        }

    }, 1000);

    document.getElementById('open-zendesk-action').addEventListener('click', function(event) {
        event.preventDefault();
        if (typeof zE == "function") {
            zE.activate();
        }
    });
</script>
