{{ 'page-microsoft-365-pricing.css' | asset_url | stylesheet_tag }}

{% assign handles = 'microsoft-office-2019-home-and-business,microsoft-office-2021-home-and-business-pc,office365bp-month'| split : ',' %}
{% assign phone = '+44 800 048 8538' %}

<section class="microsoft-365-pricing-page">
    <h1>Why Buy a subscription product when you can have Lifetime for Cheaper? We Save you avg $75 yearly with Lifetime Licenses.</h1>
    <div class="product-list-container">
        <div class="product-list-container--inner">
            {% for handle in handles %}

                {% assign isSubscription = false %}
                {% assign item = all_products[handle] %}
                {% assign title = '' %}
                {% assign officeApps = false %}
                {% assign productTag = false %}

                {% if handle == 'microsoft-office-2019-home-and-business' %}
                    {% assign productTag = 'office2019hb' %}
                    {% assign title = 'MS Office 2019 Home and Business' %}
                    {% assign officeApps = 'word,excel,outlook,powerpoint' | split: ',' %}
                {% endif %}

                {% if handle == 'microsoft-office-2021-home-and-business-pc' %}
                    {% assign productTag = 'office2021hb' %}
                    {% assign title = 'MS Office 2021 Home and Business' %}
                    {% assign officeApps = 'word,excel,outlook,powerpoint' | split: ',' %}
                {% endif %}

                {% if handle == 'office365bp-month' %}
                    {% assign productTag = 'office365bp-month' %}
                    {% assign title = 'MS 365 Premium' %}
                    {% assign officeApps = 'word,excel,outlook,powerpoint,access,onenote,publisher' | split: ',' %}
          			{% assign isSubscription = true %}
                {% endif %}

                <div class="product-list-container--product-box">
                    {% if productTag == 'office2021hb' %}
                        <span class="product-box--recommended"><span>Recommended</span></span>
                    {% endif %}
                    <div class="product-box--image">
                        <img src="{{ item | img_url: 'small' }}" alt="Product Image" title="{{title}}" />
                    </div>
                    <span class="product-box--title">{{ title }}</span>
                    <a href="{{ item.url }}" class="product-box--action">Shop Now</a>
                    <div class="product-box--offer-timer">
                        <span>Offer Ends <span class="offer-timer--time-left">0d 00:00:00</span></span>
                    </div>
                    <div class="product-box--price-box">
                        {% if isSubscription != true %}
                            <span class="price-box--price">{{ item.price | money_with_currency }}</span>
                            <span class="price-box--info">Life Time</span>
                        {% endif %}
                        {% if isSubscription == true %}
                            <span class="price-box--price">{{ item.price | times: 12 | money_with_currency }}</span>
                            <span class="price-box--info">per Year</span>
                        {% endif %}
                    </div>

                    {% if isSubscription != true %}
                        <div class="product-box--msrp">
                            <span>M.S.R.P</span>
                            <span class="msrp--price">{{ item.compare_at_price | money_with_currency }}</span>
                        </div>
                    {% endif %}

                    {% if isSubscription != true %}
                        <ul class="product-box--features">
                            <li>Buy now use Forever</li>
                            <li>Digital download.</li>
                            <li>Lifetime support at no Extra cost.</li>
                        </ul>
                    {% endif %}

                    {% if isSubscription == true %}
                        <span class="product-box--no-msrp"></span>
                        <ul class="product-box--features">
                            <li>Subscription based.</li>
                            <li>Digital download.</li>
                            <li>Lifetime support at no Extra cost.</li>
                        </ul>
                    {% endif %}

                    <ul class="product-box--office-apps">
                        {% if officeApps %}
                            {% for officeApp in officeApps %}
                                <li>
                                    <span class="icon">
                                        <img src="{{ 'app-icon-' | append: officeApp | append: '.svg' | file_url }}" alt="Icon App" />
                                    </span>
                                    <span class="label">{{ officeApp | capitalize }}</span>
                                </li>
                            {% endfor %}
                        {% endif %}
                    </ul>
                </div>
            {% endfor %}
        </div>
    </div>

